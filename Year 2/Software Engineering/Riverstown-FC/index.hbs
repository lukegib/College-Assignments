		<script>
		
			var comment;
			var commentArray = [];
			var i; //counter
			
			$(document).ready(function(){
				
				//function trigers when post button is clicked
				$('#submitButton').click(function(){
					comment = {
						handle: $('#UsernameInput').val(),
						comment:$('#CommentInput').val(),
						postDate: Date.now()
					};
					
					//clear the textbox and usernameinput fields
					$('.form-control').val('');
					
					//push into array
					commentArray.push(comment.handle);
					commentArray.push(comment.comment);
					commentArray.push(comment.postDate);
					
					$("#Comments").prepend("<p>" + comment.comment + "<br>" + comment.handle + "<br>" + "<span class='date'></span>" + "</p>"); //code to add comment info
					
					i = commentArray.length-1; //set i to last index of array
					
				});
				
				//function to update the timestamp every second
				setInterval(function timeStamp(){
					$('.date').each(function(){
						var timeSince = Math.floor((Date.now()-parseInt([commentArray[i]]))/1000); //convert it to seconds
						
						//if more than or equal to 1 day...
						if(timeSince >= 86400){
							var day = Math.floor(timeSince/86400); //get days as number
							var pluralize = ""; //used if more than 1 day... i.e
							
							if(day>1){
								pluralise = "s"; // to turn 'day' into 'days'
							}
							
							$(this).html("posted " + day + "day " + pluralize + "ago");
						}
						//if more than or equal to 1 hour...
						else if(timeSince >= 3600){
							var hours = Math.floor(timeSince/3600); //get hours as number
							$(this).html("posted about "  + hours + "h ago");
						}
						//if more than or equal to 1 minute...
						else if(timeSince >= 60){
							var mins = Math.floor(timeSince/60); //get minutes as a number
							$(this).html("posted " + mins + "m ago");
						}
						//if more than or equal to 1 second...
						else {
							$(this).html("posted " + timeSince + "s ago");
						}
						
						i-=3; //set counter back 3 places to retrieve previous timestamp
						
					});
					
					i = commentArray.length-1; //set counter back to end of array
				}, 1000);
			
			});
			
			
			
